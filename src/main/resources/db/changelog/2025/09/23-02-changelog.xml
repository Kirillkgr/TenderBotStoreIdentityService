<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1758621594594-32" author="RillG">
        <createTable tableName="storage_files">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_storage_files"/>
            </column>
            <column name="path" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="purpose" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="usage_type" type="VARCHAR(255)"/>
            <column name="owner_type" type="VARCHAR(255)"/>
            <column name="owner_id" type="BIGINT"/>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME"/>
        </createTable>
    </changeSet>

    <changeSet id="1758621594594-33" author="RillG">
        <createIndex indexName="idx_storage_files_owner" tableName="storage_files">
            <column name="owner_type"/>
            <column name="owner_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
