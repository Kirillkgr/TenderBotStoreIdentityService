<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1759151881612-1" author="RillG">
        <createTable tableName="master_account">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_master_account"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(32)"/>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="1759151881612-2" author="RillG">
        <createTable tableName="user_membership">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_membership"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="master_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="brand_id" type="BIGINT"/>
            <column name="pickup_point_id" type="BIGINT"/>
            <column name="role" type="VARCHAR(32)"/>
            <column name="status" type="VARCHAR(32)"/>
            <column name="two_factor_enabled" type="BOOLEAN"/>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="1759151881612-3" author="RillG">
        <addColumn tableName="brands">
            <column name="master_id" type="BIGINT"/>
        </addColumn>
    </changeSet>
    <changeSet id="1759151881612-4" author="RillG">
        <addColumn tableName="orders">
            <column name="master_id" type="BIGINT"/>
        </addColumn>
    </changeSet>
    <changeSet id="1759151881612-5" author="RillG">
        <addColumn tableName="products">
            <column name="master_id" type="BIGINT"/>
        </addColumn>
    </changeSet>
    <changeSet id="1759151881612-6" author="RillG">
        <addUniqueConstraint columnNames="user_id, brand_id" constraintName="ux_um_user_brand"
                             tableName="user_membership"/>
    </changeSet>
    <changeSet id="1759151881612-7" author="RillG">
        <addForeignKeyConstraint baseColumnNames="master_id" baseTableName="brands" constraintName="FK_BRANDS_ON_MASTER"
                                 referencedColumnNames="id" referencedTableName="master_account"/>
    </changeSet>
    <changeSet id="1759151881612-8" author="RillG">
        <addForeignKeyConstraint baseColumnNames="master_id" baseTableName="orders" constraintName="FK_ORDERS_ON_MASTER"
                                 referencedColumnNames="id" referencedTableName="master_account"/>
    </changeSet>
    <changeSet id="1759151881612-9" author="RillG">
        <addForeignKeyConstraint baseColumnNames="master_id" baseTableName="products"
                                 constraintName="FK_PRODUCTS_ON_MASTER" referencedColumnNames="id"
                                 referencedTableName="master_account"/>
    </changeSet>
    <changeSet id="1759151881612-10" author="RillG">
        <addForeignKeyConstraint baseColumnNames="brand_id" baseTableName="user_membership"
                                 constraintName="FK_USER_MEMBERSHIP_ON_BRAND" referencedColumnNames="id"
                                 referencedTableName="brands"/>
    </changeSet>
    <changeSet id="1759151881612-11" author="RillG">
        <addForeignKeyConstraint baseColumnNames="master_id" baseTableName="user_membership"
                                 constraintName="FK_USER_MEMBERSHIP_ON_MASTER" referencedColumnNames="id"
                                 referencedTableName="master_account"/>
    </changeSet>
    <changeSet id="1759151881612-12" author="RillG">
        <addForeignKeyConstraint baseColumnNames="pickup_point_id" baseTableName="user_membership"
                                 constraintName="FK_USER_MEMBERSHIP_ON_PICKUP_POINT" referencedColumnNames="id"
                                 referencedTableName="pickup_points"/>
    </changeSet>
    <changeSet id="1759151881612-13" author="RillG">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_membership"
                                 constraintName="FK_USER_MEMBERSHIP_ON_USER" referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>