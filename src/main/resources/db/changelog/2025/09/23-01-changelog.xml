<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1758621594594-1" author="RillG">
        <createTable tableName="brands">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_brands"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="organization_name" type="VARCHAR(255)"/>
            <column name="telegram_bot_token" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1758621594594-2" author="RillG">
        <createTable tableName="departments">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_departments"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(2000)"/>
        </createTable>
    </changeSet>
    <changeSet id="1758621594594-3" author="RillG">
        <createTable tableName="group_tag_archive">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_group_tag_archive"/>
            </column>
            <column name="original_group_tag_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="brand_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="parent_id" type="BIGINT"/>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="path" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="level" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="archived_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1758621594594-4" author="RillG">
        <createTable tableName="group_tags">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_group_tags"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="brand_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="parent_id" type="BIGINT"/>
            <column name="path" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="level" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1758621594594-5" author="RillG">
        <createTable tableName="product_archive">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_product_archive"/>
            </column>
            <column name="original_product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(2000)"/>
            <column name="price" type="DECIMAL(18, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="promo_price" type="DECIMAL(18, 2)"/>
            <column name="brand_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="group_tag_id" type="BIGINT"/>
            <column name="group_path" type="VARCHAR(1000)"/>
            <column name="visible" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="archived_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="1758621594594-6" author="RillG">
        <createTable tableName="products">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_products"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(10000)"/>
            <column name="price" type="DECIMAL(18, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="promo_price" type="DECIMAL(18, 2)"/>
            <column name="brand_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="group_tag_id" type="BIGINT"/>
            <column name="visible" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1758621594594-7" author="RillG">
        <createTable tableName="roles">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_roles"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1758621594594-8" author="RillG">
        <createTable tableName="tokens">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tokens"/>
            </column>
            <column name="token" type="VARCHAR(1024)"/>
            <column name="token_type" type="VARCHAR(255)"/>
            <column name="revoked" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="expiry_date" type="DATETIME"/>
            <column name="user_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1758621594594-9" author="RillG">
        <createTable tableName="user_brand">
            <column name="brand_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_brand"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_brand"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1758621594594-10" author="RillG">
        <createTable tableName="user_providers">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_providers"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="provider" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="provider_user_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="1758621594594-11" author="RillG">
        <createTable tableName="user_roles">
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_roles"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_roles"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1758621594594-12" author="RillG">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="username" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="patronymic" type="VARCHAR(255)"/>
            <column name="date_of_birth" type="DATE"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="phone" type="VARCHAR(255)"/>
            <column name="avatar_url" type="VARCHAR(255)"/>
            <column name="email_verified" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="email_verification_code" type="VARCHAR(255)"/>
            <column name="email_verification_expires_at" type="DATETIME"/>
            <column name="pending_email" type="VARCHAR(255)"/>
            <column name="master_id" type="BIGINT"/>
            <column name="department_id" type="BIGINT"/>
            <column name="created_at" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="1758621594594-13" author="RillG">
        <addUniqueConstraint columnNames="name" constraintName="uc_brands_name" tableName="brands"/>
    </changeSet>
    <changeSet id="1758621594594-14" author="RillG">
        <addUniqueConstraint columnNames="organization_name" constraintName="uc_brands_organizationname"
                             tableName="brands"/>
    </changeSet>
    <changeSet id="1758621594594-15" author="RillG">
        <addUniqueConstraint columnNames="name" constraintName="uc_departments_name" tableName="departments"/>
    </changeSet>
    <changeSet id="1758621594594-16" author="RillG">
        <addUniqueConstraint columnNames="name" constraintName="uc_roles_name" tableName="roles"/>
    </changeSet>
    <changeSet id="1758621594594-17" author="RillG">
        <addUniqueConstraint columnNames="token" constraintName="uc_tokens_token" tableName="tokens"/>
    </changeSet>
    <changeSet id="1758621594594-18" author="RillG">
        <addUniqueConstraint columnNames="email" constraintName="uc_users_email" tableName="users"/>
    </changeSet>
    <changeSet id="1758621594594-19" author="RillG">
        <addUniqueConstraint columnNames="username" constraintName="uc_users_username" tableName="users"/>
    </changeSet>
    <changeSet id="1758621594594-20" author="RillG">
        <addUniqueConstraint columnNames="provider, provider_user_id" constraintName="uk_provider_user"
                             tableName="user_providers"/>
    </changeSet>
    <changeSet id="1758621594594-21" author="RillG">
        <addForeignKeyConstraint baseColumnNames="brand_id" baseTableName="group_tags"
