    <changeSet id="1758621594594-22" author="RillG">
        <addForeignKeyConstraint baseColumnNames="parent_id" baseTableName="group_tags"
                                 constraintName="FK_GROUP_TAGS_ON_PARENT" referencedColumnNames="id"
