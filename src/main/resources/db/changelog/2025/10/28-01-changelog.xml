<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1761651693323-1" author="RillGd">
        <createTable tableName="stock_batches">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_stock_batches"/>
            </column>
            <column name="master_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="ingredient_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="warehouse_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="qty_received" type="DECIMAL(18, 6)">
                <constraints nullable="false"/>
            </column>
            <column name="unit_cost" type="DECIMAL(18, 6)"/>
            <column name="received_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="DATE"/>
        </createTable>
    </changeSet>
    <changeSet id="1761651693323-2" author="RillGd">
        <addColumn tableName="supplies">
            <column name="total_cost" type="DECIMAL(18, 6)"/>
        </addColumn>
    </changeSet>
    <changeSet id="1761651693323-3" author="RillGd">
        <addColumn tableName="supply_items">
            <column name="unit_cost" type="DECIMAL(18, 6)"/>
        </addColumn>
    </changeSet>
    <changeSet id="1761651693323-4" author="RillGd">
        <addForeignKeyConstraint baseColumnNames="ingredient_id" baseTableName="stock_batches"
                                 constraintName="FK_STOCK_BATCHES_ON_INGREDIENT" referencedColumnNames="id"
                                 referencedTableName="ingredients"/>
    </changeSet>
    <changeSet id="1761651693323-5" author="RillGd">
        <addForeignKeyConstraint baseColumnNames="master_id" baseTableName="stock_batches"
                                 constraintName="FK_STOCK_BATCHES_ON_MASTER" referencedColumnNames="id"
                                 referencedTableName="master_account"/>
    </changeSet>
    <changeSet id="1761651693323-6" author="RillGd">
        <addForeignKeyConstraint baseColumnNames="warehouse_id" baseTableName="stock_batches"
                                 constraintName="FK_STOCK_BATCHES_ON_WAREHOUSE" referencedColumnNames="id"
                                 referencedTableName="warehouses"/>
    </changeSet>

</databaseChangeLog>